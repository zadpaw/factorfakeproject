<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wb1">

    <!-- MAIN ANIMATION -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/realfof"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_speed="1"
        app:lottie_rawRes="@raw/realfof"

        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-30dp"
        />

    <!-- menu2-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="1"
        app:lottie_rawRes="@raw/menu3"
        app:layout_constraintWidth_percent="0.86"
        app:layout_constraintHeight_percent="0.3"


        app:layout_constraintTop_toBottomOf="@id/realfof"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

    <!-- starrt-->
    <Button
        android:id="@+id/start"
        android:layout_width="250dp"

        android:layout_height="wrap_content"
        android:text="START GAME"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/startbutton"

        app:layout_constraintTop_toBottomOf="@id/menu"
        android:layout_marginTop="-180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/marker"
        />

    <!-- tutorial-->
    <Button
        android:id="@+id/tutorial"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="TUTORIAL"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/tutorialbutton"
        app:layout_constraintTop_toBottomOf="@id/start"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/marker"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
