<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

        <solid android:color="@android:color/transparent" />

        <stroke
            android:width="8dp"
            android:color="#90000000" />   <!-- black border -->
        </shape>
    </item>
    <item
        android:top="8dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="6dp"
                android:color="#60000000" />
        </shape>
    </item>
    <item
        android:top="14dp"
        android:left="14dp"
        android:right="14dp"
        android:bottom="14dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="6dp"
                android:color="#30000000" />
        </shape>
    </item>
</layer-list>